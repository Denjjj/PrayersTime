<!DOCTYPE html>
<html lang="ar">
  <%- include('./partials/head') %>
  <body class="admin-body">
    <%- include('./partials/header') %>
    <main>
      <div class="nm-container">
        <section
          class="sm-padding-container column justify-center align-center"
        >
          <form action="/admin/add-user" name="body" method="POST">
            <h2><%= title %></h2>
            <% if(errMsg !== '') { %>
            <div class="error-msg"><%= errMsg %></div>
            <% }%>
            <input
              type="text"
              name="user_name"
              placeholder="اسم العضو"
              required
            />
            <input
              type="email"
              name="user_mail"
              placeholder="ايميل العضو"
              required
            />
            <input
              type="password"
              name="user_password"
              placeholder="كلمة سر العضو"
              required
            />
            <label>الوظيفة</label>
            <select name="user_role" class="select-box">
              <option value="0">مدير</option>
              <option selected value="1">محرر</option>
            </select>
            <input type="submit" value="اضافة العضو" />
          </form>
        </section>
      </div>
    </main>
  </body>
</html>
