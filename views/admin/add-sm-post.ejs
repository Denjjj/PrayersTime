<!DOCTYPE html>
<html lang="ar">
  <%- include('./partials/head') %>
  <body class="admin-body">
    <%- include('./partials/header') %>
    <main>
      <div class="nm-container">
        <section
          class="sm-padding-container column justify-center align-center"
        >
          <form action="/admin/add-sm-post" name="body" method="POST">
            <h2><%= title %></h2>
            <% if(errMsg !== '') { %>
            <div class="error-msg"><%= errMsg %></div>
            <% }%>
            <label>رمز الايقونة</label>
            <input type="text" name="icon" placeholder="رمز الايقونة" />
            <label>القائل</label>
            <input type="text" name="sayer" placeholder="القائل" />
            <label>المحتوي</label>
            <textarea
              name="content"
              placeholder="المحتوي"
              required
              cols="30"
            ></textarea>
            <label>اللغة</label>
            <select name="lang" class="select-box">
              <option value="ar">عربي</option>
              <option value="en">انجليزي</option>
            </select>
            <input type="submit" value="اضافة" />
          </form>
        </section>
      </div>
    </main>
  </body>
</html>
